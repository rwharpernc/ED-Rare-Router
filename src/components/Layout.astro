---
import '../styles/global.css';
import { configFileExists } from '../lib/config';

interface Props {
  title?: string;
}

const { title = 'ED Rare Router' } = Astro.props;

// First-run: if no config, redirect to setup (except for /setup and /api)
const pathname = Astro.url.pathname;
if (!configFileExists() && pathname !== '/setup' && !pathname.startsWith('/api')) {
  return Astro.redirect('/setup');
}
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Elite Dangerous Rare Goods Router - Rare goods + PowerPlay route helper" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 text-gray-100 min-h-screen flex flex-col">
    <div class="flex-grow">
      <slot />
    </div>
    {import.meta.env.DEV && (
      <div class="bg-gray-800 border-t border-gray-700 py-3 px-4">
        <div class="max-w-7xl mx-auto flex gap-3 justify-center">
          <a
            href="/curate"
            class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm font-medium transition-colors"
          >
            Curate Legality
          </a>
          <a
            href="/curate-prices"
            class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded text-sm font-medium transition-colors"
          >
            Curate Prices
          </a>
        </div>
      </div>
    )}
    <footer class="bg-gray-800 border-t border-gray-700 py-4 mt-8">
      <div class="max-w-7xl mx-auto px-4 text-center text-sm text-gray-400">
        <p>Â© {new Date().getFullYear()} R.W. Harper - Easy Day Gamer. All rights reserved.</p>
        <p class="mt-1 text-xs text-gray-500">Elite Dangerous is a trademark of Frontier Developments plc.</p>
      </div>
    </footer>
  </body>
</html>
