---
// Price curation page - development only
import Layout from "../components/Layout.astro";
import PriceCuratorApp from "../components/PriceCuratorApp";

if (!import.meta.env.DEV) {
  return Astro.redirect("/");
}
---

<Layout title="Price Curation - Development Only">
  <main class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <div class="mb-4">
        <a
          href="/"
          class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Main
        </a>
      </div>
      <h1 class="text-3xl font-bold text-gray-100 mb-2">Price Curation</h1>
      <p class="text-gray-400">
        Manage baseline purchase prices for rare goods. This interface is only available in development mode.
      </p>
      <p class="text-sm text-gray-500 mt-2">
        Prices entered here will be used as fallback when EDDN market data is not available.
      </p>
    </div>
    <PriceCuratorApp client:load />
  </main>
</Layout>
